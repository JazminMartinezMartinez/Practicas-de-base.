		cin>>nombre;
		cout<<"¿Si asistio? (S/N)";
		cin>>asistio;

 if(asistio == 's' o asistio == 'S'){
			asistencia[i] = 1;
		}
	}
	int faltas =0;
	for(int i=0; i<numAlumnos; i++){
		if(asistencia[i] == 0){
			faltas++;
		}
	}
 cout<<"Número de faltas"<<faltas<<endl;
